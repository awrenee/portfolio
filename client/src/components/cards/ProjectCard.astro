---
interface Props {
	title: string;
  description: string;
  repo: string;
  live: string;
  tech: string[];
}

const { title, description, repo, live, tech } = Astro.props;
---
<article>
  <div class="top">
    <img src="https://img.freepik.com/free-vector/dark-gradient-background-with-copy-space_53876-99548.jpg" />
    <div class="title-container">
      <h3>{title}</h3>
      <div class="links">
        <a href={live} target="_blank">live</a>
        <a href={`https://github.com/awrenee/${repo}`} target="_blank">src</a>
      </div>
    </div>
    <p>{description}</p>
  </div>

  <div class="tech-container">
    <ul>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.25" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-hammer"><path d="m15 12-8.373 8.373a1 1 0 1 1-3-3L12 9"/><path d="m18 15 4-4"/><path d="m21.5 11.5-1.914-1.914A2 2 0 0 1 19 8.172V7l-2.26-2.26a6 6 0 0 0-4.202-1.756L9 2.96l.92.82A6.18 6.18 0 0 1 12 8.4V10l2 2h1.172a2 2 0 0 1 1.414.586L18.5 14.5"/></svg>
      {tech.map((tech) => (
        <li>{tech}</li>
      ))}
    </ul>
  </div>

</article>

<style>
  article {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    gap: 10px;
  }
  .top {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  img {
    height: 100px;
    width: 100%;
    object-fit: cover;
  }
  .title-container {
    display: flex;
    justify-content: space-between;
  }
  .tech-container ul {
    display: flex;
    list-style-type: none;
    gap: 10px;
    flex-wrap: wrap;
  }
</style>