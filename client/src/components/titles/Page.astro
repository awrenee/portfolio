---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<header>
  <div class="container">
    <h1>{title}</h1>
  </div>
</header>

<style>
  header {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: auto;
    max-width: 1300px;
    padding: 0 30px;
  }

  header .container {
    background-color: rgb(241, 241, 241);
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: 20px;
  }
  
  h1 {
		font-size: 2em;
	}
</style>